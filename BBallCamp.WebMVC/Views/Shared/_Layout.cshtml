<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hoop Camps United</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h2>Hoop Camps United</h2>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><button type="button">@Html.ActionLink("Home", "Index", "Home")</button></li>
                    <li><button type="button">@Html.ActionLink("About", "About", "Home")</button></li>
                    <li><button type="button">@Html.ActionLink("Contact", "Contact", "Home")</button></li>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><button type="button">@Html.ActionLink("Camps", "Index", "Camp"),</button></li>
                        <li><button type="button">@Html.ActionLink("Ratings", "Index", "CampRating")</button></li>

                        <li><button type="button">@Html.ActionLink("My Information", "Create", "Rater")</button></li>
                        <li><button type="button">@Html.ActionLink("My Ratings", "Create", "CampRating")</button></li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hoop Camps United</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
